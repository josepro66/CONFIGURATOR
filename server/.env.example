# ========================================
# CONFIGURACIÓN DE ENTORNO
# ========================================
NODE_ENV=development
PORT=3001

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Session secret para CSRF
SESSION_SECRET=your_super_secret_session_key_here

# ========================================
# CONFIGURACIÓN DE PAYU
# ========================================
PAYU_API_KEY=your_payu_api_key
PAYU_MERCHANT_ID=your_merchant_id
PAYU_ACCOUNT_ID=your_account_id
PAYU_SIGNATURE_KEY=your_signature_key
PAYU_BASE_URL=https://sandbox.api.payulatam.com

# ========================================
# CONFIGURACIÓN DE PAYPAL
# ========================================
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ========================================
# CONFIGURACIÓN DE PRECIOS
# ========================================
BEATO_PRICE=200.00
BEATO16_PRICE=250.00
KNOBO_PRICE=150.00
MIXO_PRICE=200.00
LOOPO_PRICE=110.00
FADO_PRICE=150.00

# ========================================
# CONFIGURACIÓN DE EMAIL
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_TO=notifications@yourcompany.com

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================
DATABASE_PATH=./data/orders.db
